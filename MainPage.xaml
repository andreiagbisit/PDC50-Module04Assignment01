<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module04Assignment01.MainPage">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label FontSize="24" 
            Text="Accessing Native Device Features Test - Camera)"/>

        <!-- Button to trigger the camera -->
        <Button Text="Capture Photo" Clicked="OnCapturePhotoButtonClicked" />

        <!-- Image control to display the captured photo -->
        <Image x:Name="CapturedImage" WidthRequest="300" HeightRequest="300" />

    </VerticalStackLayout>

</ContentPage>
